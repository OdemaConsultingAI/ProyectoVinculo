MONGODB_URI=mongodb+srv://ag_db_user:<db_password>@clustervinculo.0foy93k.mongodb.net/vinculosDB?retryWrites=true&w=majority&appName=ClusterVinculo

# Puerto del servidor (opcional, por defecto 3000)
PORT=3000

# Host del servidor (opcional, por defecto 0.0.0.0)
HOST=0.0.0.0

